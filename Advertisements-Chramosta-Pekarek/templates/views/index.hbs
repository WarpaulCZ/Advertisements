<!DOCTYPE html>
<html>
    <head>
        <title>Advertisements</title>
        <script src="/js/ads.js"></script>
        <link rel="shortcut icon" href="#">
    </head>
    <body>
        {{>header}}
        
        <form>
            <input id="email" placeholder="email">  
            <input id="password" type="password" placeholder="heslo">

            <button id="login">Přihlásit se</button>

        </form>   

        <div id="AdTimeLine">
            {{#each ads}}
                <div>
                    <h2>{{topic}}</h2>
                    <p>{{description}}</p>
                </div>
            {{/each}}
        </div>
        {{>footer}}
        
    </body>
</html>
